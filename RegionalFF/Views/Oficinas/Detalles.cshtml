@model RegionalFF.Models.Oficina

@{
    ViewBag.Title = "Oficinas";
    ViewBag.SubTitle1 = "Detalle de la Oficina";
    ViewBag.SubTitle2 = "Funcionarios que pertenecen a esta Oficina";
}


<div class="col-lg-12">
    <div class="x_panel">
        <div class="x_title">
            <h1>
                <i class="fa fa-building-o"></i> @ViewBag.Title
            </h1>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <h2>
                <i class="fa fa-list"></i> @ViewBag.SubTitle1
            </h2>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Sigla)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sigla)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Departamento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Departamento)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ciudad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ciudad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Direccion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

            </dl>
            <hr />
            <div class="clearfix"></div>

            <h2>
                <i class="fa fa-users"></i> @ViewBag.SubTitle2
            </h2>
            <div class="table-responsive">
                <table id="datatable" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Numero
                            </th>
                            <th>
                                Nombre y Apelldio
                            </th>
                            <th>
                                Email
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Usuarios)
                        {
                            <tr>
                                <td>
                                    @item.Numero
                                </td>
                                <td>
                                    @item.Nombre @item.Apellido
                                </td>
                                <td>
                                    @item.Email
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
