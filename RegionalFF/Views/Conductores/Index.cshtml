@model IEnumerable<RegionalFF.Models.Conductor>

@{
    ViewBag.Title = "Conductores";
    ViewBag.SubTitle = "Listado";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="">
                        <a href="@Url.Action("Create", "Conductores")" class="btn btn-default btn-xs visible-lg" data-toggle="tooltip" title="Crear Nuevo">
                            <i class="fa fa-plus"></i>
                            <strong>Crear Nuevo</strong>
                        </a>
                    </li>
                    <li class="">
                        <a href="@Url.Action("Create", "Conductores")" class="btn btn-default btn-xs hidden-lg" data-toggle="tooltip" title="Crear Nuevo">
                            <i class="fa fa-plus"></i>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="table-responsive">
                    <table id="datatable" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Apellido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Documento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                <th class="col-lg-2">
                                    <i class="fa fa-cog"></i>
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Documento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Activo)
                                    </td>
                                    <td class="col-lg-2 btn-group">
                                        <div class="pull-right">
                                            <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "Conductores", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Editar"><i class="fa fa-edit"></i> </a>

                                            <a class="btn btn-xs btn-primary" href="@Url.Action("Details", "Conductores", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Ver Detalles"><i class="fa fa-list-alt"></i> </a>

                                            <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Conductores", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Borrar"><i class="fa fa-trash-o"></i> </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
}
