@using RegionalFF.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Iniciar Sesión";
    ViewBag.Denominacion = "RegionalFF";
}


<section class="login_content">
    <img src="~/Content/img/RegionalFFlogin.png" class="image" width="100" title="@ViewBag.Denominacion" alt="@ViewBag.Denominacion" />


    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
    {

        @Html.AntiForgeryToken()
        <h1> <i class="fa fa-sign-in"></i>   @ViewBag.Title</h1>
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger pull-left" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger pull-left" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
        </div>
        <div class="form-group">
            <div class=" pull-left">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
        <br />
        <br />
        <div>
            <button type="submit" class="btn btn-success btn-block submit">Entrar</button>
            <a class="reset_pass" href="@Url.Action("ForgotPassword", "Account")">Olvidaste tu contraseña?</a>
        </div>

        <br />
        <div class="clearfix"></div>

        <div class="separator">

            <div class="clearfix"></div>
            <br />

            <div>
                <p>&copy; @DateTime.Now.Year - @ViewBag.Denominacion</p>
            </div>
        </div>
    }
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}