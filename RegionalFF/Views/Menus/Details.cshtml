@model RegionalFF.Models.Menu
@{
    ViewBag.Title = "Menú del Sistema";
    ViewBag.SubTitle = "Detalles del Menú";
}

<!-- page content -->
<div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="@Url.Action("Index", "Menus")" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Volver al listado">
                                <i class="fa fa-reply"></i>
                                Volver al listado
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Edit", "Menus", new { id = Model.Id })" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Editar">
                                <i class="fa fa-edit"></i>
                                Editar
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Delete", "Menus", new { id = Model.Id })" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Eliminar">
                                <i class="fa fa-times"></i>
                                Eliminar
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Create", "Menus")" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Crear Nuevo">
                                <i class="fa fa-plus"></i>
                                Crear Nuevo
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PadreId, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                <div class="form-control-static col-md-12">
                                    @Html.DisplayFor(model => model.PadreId)
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                <div class="form-control-static col-md-12">
                                    @Html.DisplayFor(model => model.Nombre)
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-6">
                                <div class="form-control-static col-md-12">
                                    @Html.DisplayFor(model => model.Descripcion)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Accion, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-6">
                                <div class="form-control-static col-md-12">
                                    @Html.DisplayFor(model => model.Accion)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Controlador, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-6">
                                <div class="form-control-static col-md-12">
                                    @Html.DisplayFor(model => model.Controlador)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Activo, htmlAttributes: new { @class = "control-label col-lg-3" })
                            <div class="col-lg-6">
                                <div class="form-control-static col-md-12">
                                    @Html.DisplayFor(model => model.Activo)
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>