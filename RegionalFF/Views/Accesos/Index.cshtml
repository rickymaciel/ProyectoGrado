@model IEnumerable<RegionalFF.Models.MenuAdmin>
@{
    ViewBag.Title = "Menú Administrador del Sistema";
    ViewBag.SubTitle = "Lista de Menus";
}


<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="@Url.Action("Create", "Accesos")" class="">
                                <i class="fa fa-plus"></i>
                                <strong>Crear Nuevo</strong>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        Administrar el Menú: <code></code>
                    </p>
                    <div class="">
                        <table id="datatable-responsive" class="table table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <th>
                                        @Html.DisplayNameFor(model => model.PadreId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Accion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Controlador)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Activo)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PadreId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Accion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Controlador)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Activo)
                                        </td>
                                        <td>
                                            <div class="btn-group  btn-group-xs">
                                                <a class="btn btn-warning" href="@Url.Action("Edit", "Accesos", new { id = item.Id })"><i class="fa fa-edit"></i> </a>
                                                <a class="btn btn-primary" href="@Url.Action("Details", "Accesos", new { id = item.Id })"><i class="fa fa-list"></i></a>
                                                <a class="btn btn-danger" href="@Url.Action("Delete", "Accesos", new { id = item.Id })"><i class="fa fa-trash-o"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>