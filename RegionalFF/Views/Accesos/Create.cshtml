@model RegionalFF.Models.MenuAdmin
@{
    ViewBag.Title = "Menú Administrador del Sistema";
    ViewBag.SubTitle = "Crear Nuevo";
}



<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title</h3>
    </div>

    <div class="title_right">
        <div class="pull-right">
            <div class="btn-group">
                <a href="@Url.Action("Index", "Accesos")" class="btn btn-default visible-lg" data-toggle="tooltip" data-placement="top" title="Volver">
                    <i class="fa fa-reply"></i>
                    <strong>Volver</strong>
                </a>
                <a href="@Url.Action("Index", "Accesos")" class="btn btn-default hidden-lg" data-toggle="tooltip" data-placement="top" title="Volver">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.SubTitle</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("Create", "Accesos", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.PadreId, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.PadreId, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @placeholder = "Padre ID" } })
                            @Html.ValidationMessageFor(model => model.PadreId, "", new { @class = "text-danger text-left" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-lg-6">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @placeholder = "Nombre" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger text-left" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-lg-6">
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @placeholder = "Descripción" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger text-left" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Accion, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-lg-6">
                            @Html.EditorFor(model => model.Accion, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @placeholder = "Acción" } })
                            @Html.ValidationMessageFor(model => model.Accion, "", new { @class = "text-danger text-left" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Controlador, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-lg-6">
                            @Html.EditorFor(model => model.Controlador, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @placeholder = "Controlador" } })
                            @Html.ValidationMessageFor(model => model.Controlador, "", new { @class = "text-danger text-left" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Activo, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-lg-6">
                            @Html.EditorFor(model => model.Activo, new { htmlAttributes = new { @class = "" } })
                            @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "text-danger text-left" })
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button type="reset" class="btn btn-default">Limpiar</button>
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
