@model IEnumerable<RegionalFF.Models.Facilitacion>
@using Microsoft.AspNet.Identity
@using RegionalFF.Controllers

@{
    if (User.Identity.GetUserName() != "")
    {

        FacilitacionesController hoy = new FacilitacionesController();
        ViewBag.Title = "Facilitación";
        ViewBag.SubTitle = "Lista de Registros de Facilitaciones - Este Año";

        HttpCookie RegionalFFCookie = HttpContext.Current.Request.Cookies["GlobalRegionalFF"] ?? new HttpCookie("GlobalRegionalFF ");
        RegionalFFCookie.Values["CantRegistroHoy"] = hoy.getCantidadRegistroHoy().ToString();
        RegionalFFCookie.Values["CantTotalMes"] = hoy.getCantidadRegistroMes().ToString();
        RegionalFFCookie.Values["CantTotalAnio"] = hoy.getCantidadRegistroAnio().ToString();

        RegionalFFCookie.Expires = DateTime.Now.AddDays(1d);
        Response.Cookies.Add(RegionalFFCookie);
    }
}
@{
    HttpCookie RegionalFFCookies = HttpContext.Current.Request.Cookies["GlobalRegionalFF"] ?? new HttpCookie("GlobalRegionalFF ");
}

<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title</h3>
    </div>

    <div class="title_right">
        <div class="pull-right">
            <div class="btn-group">
                <button type="button" class="btn btn-default visible-lg" data-toggle="modal" data-target="#crearFacilitacion" title="Nuevo Registro"><i class="fa fa-pencil"></i> Nuevo Registro</button>
                <button type="button" class="btn btn-default hidden-lg" data-toggle="modal" data-target="#crearFacilitacion" title="Nuevo Registro"><i class="fa fa-pencil"></i></button>
            </div>
        </div>
    </div>
</div>


<div class="row top_tiles  tile_count">
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="ion-person text-info"></i></div>
            <div class="count">
                @RegionalFFCookies.Values["Sigla"]
            </div>
            <h3>@RegionalFFCookies.Values["Usuario"] </h3>
            <p>@RegionalFFCookies.Values["Oficina"]</p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-pencil text-info"></i></div>
            <div class="count">
                @RegionalFFCookies.Values["CantRegistroHoy"]
            </div>
            <h3>Hoy</h3>
            <p>Total turistas Registrados</p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-pencil-square-o text-info"></i></div>
            <div class="count">
                @RegionalFFCookies.Values["CantTotalMes"]
            </div>
            <h3>Este Mes</h3>
            <p>Total turistas Registrados</p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-pencil-square text-info"></i></div>
            <div class="count">
                @RegionalFFCookies.Values["CantTotalAnio"]
            </div>
            <h3>Este Año</h3>
            <p>Total Turistas Registrados</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.SubTitle</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle text-info " data-toggle="dropdown" title="Ir a" role="button" aria-expanded="false">
                            <i class="fa fa-filter"></i>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="@Url.Action("VerTodo", "Facilitaciones")"><i class="fa fa-list"></i> Ver Todo</a>
                            </li>
                            <li>
                                <a href="@Url.Action("EsteMes", "Facilitaciones")"><i class="fa fa-list"></i> Este Mes</a>
                            </li>
                            <li>
                                <a href="@Url.Action("EsteAño", "Facilitaciones")"><i class="fa fa-list"></i> Este Año</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="table-responsiv">
                    <table id="datatable" class="table table-striped table-hover table-condensed dt-responsive " cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fecha)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pais)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ciudad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Estadia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Observaciones)
                                </th>
                                <th class="col-lg-2">
                                    <i class="fa fa-cog"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy HH:mm:ss}", item.Fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.Nombre) @Html.DisplayFor(modelItem => item.Usuario.Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pais.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cantidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estadia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Observaciones)
                                    </td>
                                    <td class="col-lg-2 col-xs-2 text-center">
                                        <span class="btn-group">
                                            <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "Facilitaciones", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Editar"><em class="fa fa-pencil"></em> </a>
                                            <a class="btn btn-xs btn-primary" href="@Url.Action("Details", "Facilitaciones", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Ver Detalles"><em class="fa fa-eye"></em> </a>
                                            <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Facilitaciones", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Borrar"><em class="fa fa-trash"></em> </a>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div id="container-floating" data-toggle="modal" data-target="#crearFacilitacion">
            <div id="floating-button" data-toggle="tooltip" data-placement="left" data-original-title="Registrar Nuevo" title="Registrar Nuevo">
                <p class="plus">+</p>
                <img class="edit" src="~/Content/bt_compose2_1x.png">
            </div>
        </div>
    </div>
</div>

@Html.Partial("_PartialFacilitacion")

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
}
