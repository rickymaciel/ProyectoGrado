@model IEnumerable<RegionalFF.Models.Facilitacion>
@using Microsoft.AspNet.Identity
@using RegionalFF.Controllers

@{
    if (User.Identity.GetUserName() != "")
    {
        ViewBag.Title = "Facilitación";
        ViewBag.SubTituloMes = ViewBag.Mes + "/" + ViewBag.Año;

        ViewBag.SubTituloAño = ViewBag.Año;
    }
}

