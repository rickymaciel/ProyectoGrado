@model IEnumerable<RegionalFF.Models.Facilitacion>

@{
    ViewBag.Title = "Informe de Facilitación";
    ViewBag.SubTitle = "Desde: " + @ViewBag.Desde + " - Hasta: " + @ViewBag.Hasta;
}

<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title</h3>
    </div>

    <div class="title_right">
        <div class="pull-right">
            <div class="btn-group">
                <a  class="btn btn-link hidden-lg">
                    <i class="fa fa-filter"></i>
                </a>
                <a  class="btn btn-link visible-lg">
                    <i class="fa fa-filter"></i>
                    <strong>Filtrar por:</strong>
                </a>
                <a href="@Url.Action("Informe", "Facilitaciones")" class="btn btn-default hidden-lg" data-toggle="tooltip" title="Volver">
                    <i class="fa fa-reply"></i>
                </a>
                <a href="@Url.Action("Informe", "Facilitaciones")" class="btn btn-default visible-lg" data-toggle="tooltip" title="Volver">
                    <i class="fa fa-reply"></i>
                    <strong>Volver</strong>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.SubTitle</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Usuario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pais)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ciudad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cantidad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Estadia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Observaciones)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @String.Format("{0:dd/MM/yyyy HH:mm:ss}", item.Fecha)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Usuario.Nombre) @Html.DisplayFor(modelItem => item.Usuario.Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pais.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estadia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Observaciones)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
