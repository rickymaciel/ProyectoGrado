@using Microsoft.AspNet.Identity
@using RegionalFF.Controllers
@model IEnumerable<RegionalFF.Models.Facilitacion>


@{
    ViewBag.Title = "Facilitación";
    ViewBag.SubTitle = "Listado";
}


<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="@Url.Action("Create", "Facilitaciones")" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Crear Nuevo">
                                <i class="fa fa-plus"></i>
                                <strong>Crear Nuevo</strong>
                            </a>
                        </li>
                        <li>
                            <a href="#" id="compose" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Registrar Nuevo">
                                <i class="fa fa-plus"></i>
                                <strong>Registrar Nuevo</strong>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        Administrar el Menú: <code></code>
                    </p>
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Año)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ciudad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Mes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pais)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Usuario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaEdicion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cantidad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Estadia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Observaciones)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Año)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Mes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pais.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Usuario.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fecha)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaEdicion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estadia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Observaciones)
                                        </td>
                                        <td class="col-lg-2 btn-group">
                                            <div class="pull-right">
                                                <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Facilitaciones", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Editar"><i class="fa fa-edit"></i> </a>

                                                <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "Facilitaciones", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Ver Detalles"><i class="fa fa-eye"></i> </a>

                                                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Facilitaciones", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Borrar"><i class="fa fa-trash-o"></i> </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- compose -->
@using (Ajax.BeginForm("AjaxRegistroFacilitacion", "Facilitaciones", FormMethod.Post,
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            UpdateTargetId = "Facilitacion"

        }))
{
    <div class="compose col-md-6 col-xs-12">
        <div class="compose-header">
            Nuevo Registro | Facilitación
            <button type="button" class="close compose-close">
                <span>×</span>
            </button>
        </div>
        @Html.AntiForgeryToken()
        <div class="compose-body">

            <div id="edito" class="editor-wrappe">
                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <br />
                    <div class="form-group col-md-6 has-feedback hidden">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UserId">UserId</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control col-md-12 col-xs-12 has-feedback-left", @require ="true" })
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span class="field-validation-valid text-danger" data-valmsg-for="UserId" data-valmsg-replace="true"></span>
                        </div>
                    </div>


                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Mes">Mes</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" data-val="true" id="Mes" name="Mes" type="text" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="Mes" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Año">Año</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" data-val="true" data-val-date="The field Año must be a date." id="Año" name="Año" type="number" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="Año" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="PaisId">PaisId</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.DropDownList("PaisId", null, htmlAttributes: new { @class = "form-control col-md-12 col-xs-12 has-feedback-left" })
                            <span class="field-validation-valid text-danger" data-valmsg-for="PaisId" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="CiudadId">CiudadId</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.DropDownList("CiudadId", null, htmlAttributes: new { @class = "form-control col-md-12 col-xs-12 has-feedback-left" })
                            <span class="field-validation-valid text-danger" data-valmsg-for="CiudadId" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Fecha">Fecha</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" data-val="true" data-val-date="The field Fecha must be a date." data-val-required="El campo Fecha es obligatorio." id="Fecha" name="Fecha" type="datetime" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="Fecha" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="FechaEdicion">FechaEdicion</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" data-val="true" data-val-date="The field FechaEdicion must be a date." id="FechaEdicion" name="FechaEdicion" type="datetime" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="FechaEdicion" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Cantidad">Cantidad</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" data-val="true" data-val-number="The field Cantidad must be a number." data-val-required="Este campo es requerido" id="Cantidad" name="Cantidad" type="number" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="Cantidad" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Estadia">Estadia</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" data-val="true" data-val-number="The field Estadia must be a number." data-val-required="Este campo es requerido" id="Estadia" name="Estadia" type="number" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="Estadia" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6 has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Observaciones">Observaciones: </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input class="form-control col-md-12 col-xs-12 has-feedback-left text-box single-line" id="Observaciones" name="Observaciones" type="text" value="" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="Observaciones" data-valmsg-replace="true"></span>
                        </div>
                    </div>

                    <br class="ln_solid">
                    <div class="form-group col-md-12">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
<!-- /compose -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#UserId').val('@User.Identity.GetUserId()');
    </script>
}
