@model IEnumerable<RegionalFF.Models.Facilitacion>
@using Microsoft.AspNet.Identity
@using RegionalFF.Controllers

@{
    if (User.Identity.GetUserName() != "")
    {
        ViewBag.Title = "Facilitación";
        ViewBag.SubTitle = "Informe de Principales Países de origen  | " + ViewBag.Mes + " " + ViewBag.Año;
    }
}

<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.SubTitle</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="@Url.Action("PaisesEsteMes", "Facilitaciones")">Este Mes</a>
                            </li>
                            <li>
                                <a href="@Url.Action("PaisesEsteAño", "Facilitaciones")">Este Año</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div id="echart_pie" style="height:350px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var LegendData = @Html.Raw(Json.Encode(ViewBag.LegendData));
    var SeriesData = @Html.Raw(Json.Encode(ViewBag.SeriesData));
    var Texto = @Html.Raw(Json.Encode(ViewBag.SubTitle));
    var Titulo = 'País de origen';

</script>

    @Scripts.Render("~/bundles/echarts")

}