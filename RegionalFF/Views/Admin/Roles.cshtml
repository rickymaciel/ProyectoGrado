@model IEnumerable<RegionalFF.Models.Rol>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administración";
    ViewBag.SubTitle = "Roles";
}


<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            <div class="btn-group">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-default" data-toggle="tooltip" title="Volver">
                    <i class="fa fa-reply"></i>
                </a>
                <a href="@Url.Action("Create", "Admin")" class="btn btn-default" data-toggle="tooltip" title="Crear usuario">
                    <i class="fa fa-plus"></i>
                </a>
                <a href="@Url.Action("NuevoRol", "Admin")" class="btn btn-default" data-toggle="tooltip" title="Crear rol">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.SubTitle</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable" class="table table-striped table-hover table-condensed dt-responsive " cellspacing="0" width="100%">
                    <thead>
                        <tr class="bg-blue">
                            <th>
                                Roles
                            </th>
                            <th class="col-lg-1 col-xs-3">
                                <i class="fa fa-cog"></i>
                            </th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleName)
                                </td>
                                <td class="col-lg-1 col-xs-3">
                                    <span class="btn-group">
                                        @if (item.RoleName.ToLower() != "Administrator")
                                        {
                                            <a class="btn btn-warning btn-xs" href="@Url.Action("EditarRol", "Admin", new { roleName = item.RoleName })" data-toggle="tooltip" data-placement="top" title="Editar"><em class="fa fa-pencil"></em> </a>
                                            <a class="btn btn-danger btn-xs" onclick="return confirm('¿Seguro que desea eliminar este usuario?');" href="@Url.Action("DeleteUserRole", "Admin", new { UserName = item.RoleName })" data-toggle="tooltip" data-placement="top" title="Borrar"><em class="fa fa-trash"></em></a>
                                        }
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/datatable")
}
