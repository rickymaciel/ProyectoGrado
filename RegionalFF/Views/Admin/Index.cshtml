@model PagedList.IPagedList<RegionalFF.Models.ExpandedUserDTO>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administrar Usuarios";
    ViewBag.SubTitle = "Lista de Usuarios";
}



<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="@Url.Action("Create", "Admin")" class="">
                                <i class="fa fa-plus-circle"></i>
                                Nuevo Usuario
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("NuevoRol", "Admin")" class="">
                                <i class="fa fa-plus-circle"></i>
                                Nuevo Rol
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Roles", "Admin")" class="">
                                <i class="fa fa-shield"></i>
                                Ver Roles
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="">

                        @*@using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                        {
                            <div class="col-md-7">
                                <div class="input-group">
                                    @Html.TextBox("searchStringUserNameOrEmail", ViewBag.CurrentFilter as string, "", new { @class = "form-control", @autocomplete = "off", @placeholder = "Buscar por nombre de Usuario o Email ..." })
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
                                    </span>
                                </div>
                            </div>
                        }*@


                        <table id="datatable-responsive" class="table table-striped table-hover table-condensed dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre y Apellido
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Pertenece a:
                                    </th>
                                    <th>
                                        Nombre de Usuario
                                    </th>
                                    <th>
                                        Nº Funcionario
                                    </th>
                                    <th>
                                        Nº Documento
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
                                    <th>
                                        Opciones
                                    </th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Oficina.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Numero)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Documento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>

                                            <div class="btn-group  btn-group-xs">
                                                <a class="btn btn-warning" href="@Url.Action("EditUser", "Admin", new { UserName = item.UserName })"><i class="fa fa-edit"></i> </a>
                                                <a class="btn btn-danger" onclick="return confirm('Are you sure you wish to delete this user?');" href="@Url.Action("DeleteUser", "Admin", new { UserName = item.UserName})"><i class="fa fa-times"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>