@model RegionalFF.Models.UsuarioyRoles
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administración";
    ViewBag.SubTitle = "Asignar roles";
    ViewBag.SubTitle2 = "Roles asignados";
}


<div class="page-title">
    <div class="title_left">
        <h3><i class="fa fa-edit"></i> @ViewBag.Title</h3>
    </div>

    <div class="title_right">
        <div class="pull-right">
            <div class="btn-group">
                <a href="@Url.Action("Create", "Admin")" class="btn btn-default visible-lg" data-toggle="tooltip" title="Nuevo Usuario">
                    <i class="fa fa-plus"></i>
                    Nuevo Usuario
                </a>
                <a href="@Url.Action("Create", "Admin")" class="btn btn-default hidden-lg" data-toggle="tooltip" title="Nuevo Usuario">
                    <i class="fa fa-plus"></i>
                </a>

                <a href="@Url.Action("NuevoRol", "Admin")" class="btn btn-default visible-lg" data-toggle="tooltip" title="Nuevo Rol">
                    <i class="fa fa-plus"></i>
                    Nuevo Rol
                </a>
                <a href="@Url.Action("NuevoRol", "Admin")" class="btn btn-default hidden-lg" data-toggle="tooltip" title="Nuevo Rol">
                    <i class="fa fa-plus"></i>
                </a>

                <a href="@Url.Action("Roles", "Admin")" class="btn btn-default visible-lg" data-toggle="tooltip" title="Roles">
                    <i class="fa fa-th"></i>
                    Ver Roles
                </a>
                <a href="@Url.Action("Roles", "Admin")" class="btn btn-default hidden-lg" data-toggle="tooltip" title="Roles">
                    <i class="fa fa-th"></i>
                </a>

                <a href="@Url.Action("Index", "Admin")" class="btn btn-default visible-lg" data-toggle="tooltip" title="Usuarios">
                    <i class="fa fa-th"></i>
                    Ver Usuarios
                </a>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-default hidden-lg" data-toggle="tooltip" title="Usuarios">
                    <i class="fa fa-th"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.SubTitle</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-lg-2 col-xs-12 control-label">Roles sin asignar</label>
                        <div class="col-lg-5 col-xs-12">
                            <div class="input-group">
                                @Html.DropDownList("NuevoRol", null,"Seleccionar", new { @class = "form-control", @placeholder = "Seleccione el Rol que desea asignar al Usuario", @required = "true" })
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-check"></i> Asignar</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.SubTitle2 <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox visible-lg">
                        <li>
                            Usuario: <strong class="badge">@Model.UserName</strong>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-hover table-condensed" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="col-lg-1 col-xs-1 text-center">
                                        <i class="fa fa-cog"></i>
                                    </th>
                                    <th>
                                        Roles Asignados
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.colUsuarioRol)
                                {
                                    <tr>
                                        <td class="col-lg-1 col-xs-1 text-center">
                                            <span class="btn-group">
                                                @if (!((Model.UserName.ToLower() == this.User.Identity.Name.ToLower()) && item.RoleName == "Administrador") && item.RoleName != "Roles no encontrados")
                                                {
                                                    <a href="@Url.Action("DeleteRole", "Admin", new { UserName = item.UserName, RoleName = item.RoleName })" data-toggle="tooltip" title="Eliminar" onclick="return confirm('¿Está seguro que desea eliminar este rol?');" class="btn btn-xs btn-danger">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-xs btn-danger" disabled data-toggle="tooltip" title="No puedes eliminar"><i class="fa fa-trash"></i></button>
                                                }
                                            </span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoleName)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
