@model RegionalFF.Models.UsuarioyRoles
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administracion";
    ViewBag.SubTitle = "Asignar Roles";
    ViewBag.SubTitle2 = "Roles asignados";
}
@using (Html.BeginForm())
{
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="@Url.Action("Create", "Admin")" class="btn btn-default">
                                    <i class="fa fa-plus"></i>
                                    Nuevo Usuario
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("NuevoRol", "Admin")" class="btn btn-default">
                                    <i class="fa fa-plus"></i>
                                    Nuevo Rol
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Roles", "Admin")" class="btn btn-default">
                                    <i class="fa fa-th"></i>
                                    Ver Roles
                                </a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label col-md-3">Roles sin asignar</label>
                                <div class="col-md-7">
                                    @Html.DropDownList("NuevoRol", null, new { @class = "form-control", @placeholder = "Seleccione el Rol que desea asignar al Usuario", @required = "true" })
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Asignar al usuario </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.SubTitle2 <small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                Usuario: <strong class="label label-primary">@Model.UserName</strong>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="">
                            <table id="datatable" class="table table-striped table-hover table-condensed" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            <i class="fa fa-cog"></i>
                                        </th>
                                        <th>
                                            Roles Asignados
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model.colUsuarioRol)
                                    {
                                        <tr>
                                            <td>
                                                @if (!((Model.UserName.ToLower() == this.User.Identity.Name.ToLower()) && item.RoleName == "Administrador") && item.RoleName != "Roles no encontrados")
                                                {
                                                    <a href="@Url.Action("DeleteRole", "Admin", new { UserName = item.UserName, RoleName = item.RoleName })" onclick="return confirm('Are you sure you wish to delete this role?');" class="btn btn-xs btn-danger">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-ban"></i>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
