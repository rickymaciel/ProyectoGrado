@model RegionalFF.Models.UserAndRolesDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administracion";
    ViewBag.SubTitle = "Asignar Roles";
    ViewBag.SubTitle2 = "Roles asignados";
}

@using (Html.BeginForm())
{
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="@Url.Action("Create", "Admin")" class="">
                                <i class="fa fa-plus"></i>
                                Nuevo Usuario
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("AddRole", "Admin")" class="">
                                <i class="fa fa-plus"></i>
                                Nuevo Rol
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ViewAllRoles", "Admin")" class="">
                                <i class="fa fa-th"></i>
                                Ver Roles
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-lg-2" for="roles">
                                Roles sin asignar a <small class="text-primary">@Model.UserName</small> 
                            </label>
                            <div class="col-lg-3">
                                @Html.DropDownList("AddRole", null, "Seleccionar rol", new { @class = "form-control col-md-12", @required = "required" })
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Asignar al usuario </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@ViewBag.SubTitle2 <small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                Usuario: <small class="badge badge-primary">@Model.UserName</small>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="">
                            <table id="datatable-responsive" class="table table-striped table-hover table-condensed dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Roles Asignados
                                        </th>
                                        <th>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (var item in Model.colUserRoleDTO)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                            <td>
                                                @if (!((Model.UserName.ToLower() == this.User.Identity.Name.ToLower()) && item.RoleName == "Administrador") && item.RoleName != "Roles no encontrados")
                                                {
                                                    @Html.ActionLink("Borrar", "DeleteRole", new { UserName = item.UserName, RoleName = item.RoleName }, new { onclick = "return confirm('Are you sure you wish to delete this role?');" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}
