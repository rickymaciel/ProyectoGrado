@model IEnumerable<RegionalFF.Models.Fiscalizacion>
@using Microsoft.AspNet.Identity
@using RegionalFF.Controllers

@{
    string Usuario = "";
    if (User.Identity.GetUserName() != "")
    {

        OficinasController oficinacur = new OficinasController();
        ViewBag.Sigla = oficinacur.getEmpresaSiglaUsers(User.Identity.GetUserName());
        ViewBag.Oficina = oficinacur.getEmpresaUsers(User.Identity.GetUserName());

        FiscalizacionesController hoy = new FiscalizacionesController();
        ViewBag.Title = "Fiscalización";
        ViewBag.SubTitle = "Lista de Registros de Fiscalizaciones - Este Mes";
        ViewBag.CantidadBusesHoy = hoy.getTotalRegistroHoy(User.Identity.GetUserName());
        ViewBag.NotificadosHoy = hoy.getTotalBusesNotificadosHoy(User.Identity.GetUserName());
        ViewBag.PasajerosHoy = hoy.getTotalPasajerosHoy(User.Identity.GetUserName());


        //total todos los usuarios

        string Email = "";
        int Index = 0;
        Email = User.Identity.GetUserName();
        Index = Email.IndexOf("@");
        Usuario = Email.Substring(0, Index);
    }
}


<div class="row top_tiles  tile_count">
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="ion-person text-info"></i></div>
            <div class="count">
                @ViewBag.Sigla
            </div>
            <h3>@Usuario </h3>
            <p>@ViewBag.Oficina</p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-bus text-info"></i></div>
            <div class="count">
                @ViewBag.CantidadBusesHoy
            </div>
            <h3>Hoy</h3>
            <p>Total de Buses Registrados</p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-bell text-info"></i></div>
            <div class="count">
                @ViewBag.NotificadosHoy
            </div>
            <h3>Hoy</h3>
            <p>Total de Buses Notificados</p>
        </div>
    </div>
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="tile-stats">
            <div class="icon"><i class="fa fa-users text-info"></i></div>
            <div class="count">
                @ViewBag.PasajerosHoy
            </div>
            <h3>Hoy</h3>
            <p>Total de Pasajeros</p>
        </div>
    </div>
</div>
