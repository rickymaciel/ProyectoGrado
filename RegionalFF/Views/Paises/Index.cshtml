@model IEnumerable<RegionalFF.Models.Pais>

@{
    ViewBag.Title = "Paises";
    ViewBag.SubTitle = "Listado";
}
<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title</h3>
    </div>

    <div class="title_right">
        <div class="pull-right">
            <div class="btn-group">
                <a href="@Url.Action("Create", "Paises")" class="btn btn-default hidden-lg" data-toggle="tooltip" title="Crear Nuevo">
                    <i class="fa fa-plus"></i>
                </a>
                <a href="@Url.Action("Create", "Paises")" class="btn btn-default visible-lg" data-toggle="tooltip" title="Crear Nuevo">
                    <i class="fa fa-plus"></i>
                    <strong>Crear Nuevo</strong>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@ViewBag.SubTitle</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="table-responsive">
                    <table id="datatable" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="col-lg-2 col-xs-2 text-left">
                                    <i class="fa fa-cog"></i>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-lg-2 col-xs-2 text-center">
                                        <span class="btn-group">
                                            <a class="btn btn-xs btn-warning" href="@Url.Action("Edit", "Paises", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Editar"><em class="fa fa-pencil"></em> </a>
                                            <a class="btn btn-xs btn-primary" href="@Url.Action("Details", "Paises", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Ver Detalles"><em class="fa fa-eye"></em> </a>
                                            <a class="btn btn-xs btn-danger" href="@Url.Action("Delete", "Paises", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Borrar"><em class="fa fa-trash"></em> </a>
                                        </span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
