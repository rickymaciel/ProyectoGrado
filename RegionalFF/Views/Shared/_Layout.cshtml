@using Microsoft.AspNet.Identity
@using RegionalFF.Controllers

@if (!Request.IsAuthenticated)
{
    Response.Redirect("http://localhost:2491/Account/Login");
}

@{
    OficinasController oficinacurrent = new OficinasController();
    ViewBag.Oficina = oficinacurrent.getEmpresaUsers(User.Identity.GetUserName());
    ViewBag.Sigla = oficinacurrent.getEmpresaSiglaUsers(User.Identity.GetUserName());
    
    ViewBag.Denominacion = "RegionalFF";
    string Email = "";
    int Index = 0;
    string Usuario = "";
    if (Request.IsAuthenticated)
    {
        if (User.Identity.GetUserName() != "")
        {
            Email = User.Identity.GetUserName();
            Index = Email.IndexOf("@");
            Usuario = Email.Substring(0, Index);
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewBag.Denominacion</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatables")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col menu_fixed">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="http://localhost:2491" class="site_title">
                            @*<i class="fa fa-pencil-square-o"></i>*@
                            <img src="~/Content/img/RegionalFF.jpg" alt="@Usuario" class="image" width="50" title="@Usuario" />
                            <span>@ViewBag.Denominacion</span>
                        </a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile">
                        <div class="profile_pic">
                            <img src="~/Content/img/user.png" alt="@Usuario" class="img-circle profile_img tip" title="@Usuario" />
                        </div>
                        <div class="profile_info">
                            <span>Bienvenido,</span>
                            <h2><strong class="text-uppercase">@Usuario</strong> </h2>
                            
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <div class="clearfix"></div>

                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        @if (User.IsInRole("Administrador"))
                        {
                            <div class="menu_section">
                                <h3 class="text-red">Administrador</h3>
                                <ul class="nav side-menu">
                                    @{
                                        Html.RenderAction("MenuAdmin", "Accesos");
                                    }
                                </ul>
                            </div>
                        }
                        <div class="menu_section">
                            <h3>Menú</h3>
                            <ul class="nav side-menu">
                                @{
                                    Html.RenderAction("MenuPrincipal", "Menus");
                                }
                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a href="javascript:document.getElementById('logoutForm').submit()" data-toggle="tooltip" data-placement="top" title="Logout">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        @Html.Partial("_LoginPartial")
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <footer>
                <div class="pull-right">
                    &copy; @DateTime.Now.Year - @ViewBag.Denominacion | @ViewBag.Oficina
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @RenderSection("scripts", required: false)
    <!-- Datatables -->
    <script>
        $(function () {

            $('#Fecha').val('@ViewBag.Fecha');
            $('#UserId').val('@ViewBag.User');

            $('#Fecha').datetimepicker({
                icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-arrow-up",
                    down: "fa fa-arrow-down"
                },
                locale: 'es',
                format: 'DD/MM/YYYY HH:mm:ss'
            });

            $('#selectize, #Roles, #CiudadId, #PaisId, #OficinaId').selectize({
                allowEmptyOption: true,
                create: false,
                persist: false,
                createOnBlur: true
            });

            $('input').iCheck({
                checkboxClass: 'icheckbox_minimal-blue',
                radioClass: 'icheckbox_minimal-blue',
                increaseArea: '20%' // optional
            });
            $('#mensaje').delay(6000).fadeOut(2000);

            var oTable = $('#datatable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                  {
                      extend: "copy",
                      className: "btn-sm"
                  },
                  {
                      extend: "csv",
                      className: "btn-sm"
                  },
                  {
                      extend: "excel",
                      className: "btn-sm"
                  },
                  {
                      extend: "pdfHtml5",
                      className: "btn-sm"
                  },
                  {
                      extend: "print",
                      className: "btn-sm"
                  },
                ],
                "bProcessing": true,
                //"sPaginationType": "full_numbers",
                "paging": true,
                "iDisplayLength": 10,
                "bPaginate": true,
                "bSort": true,
                "oLanguage": {
                    "oPaginate": {
                        "sPrevious": "←",
                        "sNext": "→",
                        "sLast": "»",
                        "sFirst": "«"
                    },
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:   ",
                    "sUrl": "",
                    "sInfoThousands": ".",
                    "sLoadingRecords": "Cargando...",
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                }
            });

            oTable.buttons().container().appendTo('#tablaMenu .col-md-6:eq(0)');
        });
    </script>
    <!-- /Datatables -->
    @if (TempData["notice"] != null)
    {
        <script>
            $(function () {
                new PNotify({
                    title: "Realizado",
                    type: "success",
                    text: "@TempData["notice"].",
                    addclass: 'success',
                    styling: 'bootstrap3',
                });

            });
        </script>
    }
</body>



</html>
