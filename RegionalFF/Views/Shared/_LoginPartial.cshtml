@{
    HttpCookie RegionalFFCookies = HttpContext.Current.Request.Cookies["GlobalRegionalFF"] ?? new HttpCookie("GlobalRegionalFF ");
}
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li class="">
                <a href="#" class="user-profile dropdown-toggle visible-lg" data-toggle="dropdown" aria-expanded="false">
                    <img src="~/Content/img/Uploads/Usuarios/@RegionalFFCookies.Values["ImagenUsuarioCurrent"]" alt="@User.Identity.GetUserName()"> @User.Identity.GetUserName()
                    <span class=" fa fa-angle-down"></span>
                </a>
                <a href="#" class="user-profile dropdown-toggle hidden-lg" data-toggle="dropdown" aria-expanded="false">
                    <img src="~/Content/img/Uploads/Usuarios/@RegionalFFCookies.Values["ImagenUsuarioCurrent"]" alt="@User.Identity.GetUserName()">
                    <span class="fa fa-angle-down"></span>
                </a>
                <ul class="dropdown-menu dropdown-usermenu pull-right">
                    <li>
                        <a href="@Url.Action("Index", "Manage")">
                            <i class="fa fa-user"></i>
                            <span> Cuenta</span>

                        </a>
                    </li>

                    @if (User.IsInRole("Administrador"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Admin")">
                                <i class="fa fa-cog"></i>
                                <span> Ajustes</span>
                            </a>
                        </li>
                    }
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out pull-right"></i> Salir</a>
                    </li>
                </ul>
            </li>

            <li>
                <a href="javascript:;" class="user-profile visible-lg tip" title="@RegionalFFCookies.Values["Oficina"]">
                    <img src="~/Content/img/info_turistica.png" alt="@RegionalFFCookies.Values["Oficina"]" />
                    @RegionalFFCookies.Values["Oficina"]
                </a>
                <a href="javascript:;" class="user-profile hidden-lg" title="@RegionalFFCookies.Values["Oficina"]">
                    <img src="~/Content/img/info_turistica.png" alt="@RegionalFFCookies.Values["Oficina"]" />
                </a>
            </li>
        </ul>
    }
}