                    <div class="form-horizontal">
                        <div class="form-group hidden">
                            <label class="control-label col-lg-2" for="UserId">Usuario</label>
                            <div class="col-md-10">
                                <input name="UserId" id="UserId" readonly required />
                                <span class="field-validation-valid text-danger" data-valmsg-for="UserId" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="Fecha">Fecha</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-date="The field Fecha must be a date." placeholder="Fecha" data-val-required="El campo Fecha es obligatorio." id="Fecha" name="Fecha" type="datetime" readonly required />
                                <span class="field-validation-valid text-danger" data-valmsg-for="Fecha" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="TransporteId">Transporte</label>
                            <div class="col-lg-1">
                                <a href="#" type="button" class="btn btn-default" data-toggle="modal" data-placement="top" title="Crear Nuevo" data-target="#crearTransporte"><i class="fa fa-plus"></i></a>
                            </div>
                            <div class="col-md-9">
                                @Html.DropDownList("TransporteId", null, "Seleccionar", new { @class = "form-control", @placeholder = "Seleccione el Transporte", @required = "true" })
                                <span class="field-validation-valid text-danger" data-valmsg-for="TransporteId" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="Fecha">Origen</label>
                            <div class="col-lg-1">
                                <a href="#" type="button" class="btn btn-default" data-toggle="modal" data-placement="top" title="Crear Nuevo" data-target="#crearCiudad2"><i class="fa fa-plus"></i></a>
                            </div>
                            <div class="col-md-9">
                                @Html.DropDownList("CiudadId", null, "Seleccionar", new { @class = "form-control", @placeholder = "Seleccione el lugar de origen", @required = "true" })
                                <span class="field-validation-valid text-danger" data-valmsg-for="CiudadId" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" for="Fecha">Destino</label>
                            <div class="col-lg-1">
                                <a href="#" type="button" class="btn btn-default" data-toggle="modal" data-placement="top" title="Crear Nuevo" data-target="#crearPais2"><i class="fa fa-plus"></i></a>
                            </div>
                            <div class="col-md-9">
                                @Html.DropDownList("PaisId", null, "Seleccionar", new { @class = "form-control", @placeholder = "Seleccione el lugar de destino", @required = "true" })
                                <span class="field-validation-valid text-danger" data-valmsg-for="PaisId" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="Cantidad">Nº Pasaj.</label>
                            <div class="col-md-10">
                                <input class="form-control text-box single-line" data-val="true" data-val-number="The field Cantidad must be a number." data-val-required="Este campo es requerido" id="CantidadPasajeros" name="CantidadPasajeros" type="number" value="" placeholder="Cantidad de pasajeros" required />
                                <span class="field-validation-valid text-danger" data-valmsg-for="CantidadPasajeros" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="Observaciones">Obs:.</label>
                            <div class="col-md-10">
                                <textarea class="form-control" cols="20" id="Observaciones" name="Observaciones" placeholder="Observaciones" rows="3"></textarea>
                                <span class="field-validation-valid text-danger" data-valmsg-for="Observaciones" data-valmsg-replace="true"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-2" for="Habilitado">Habilitado</label>
                            <div class="col-md-1">
                                <div class="checkbox">
                                    <input class="check-box" data-val="true" data-val-required="El campo Habilitado es obligatorio." id="Habilitado" name="Habilitado" type="checkbox" value="true" />
                                    <span class="field-validation-valid text-danger" data-valmsg-for="Habilitado" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <label class="control-label col-md-9" for="Habilitado">Cuenta con la habilitaci&#243;n de la SENATUR?</label>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><i class="fa fa-times"></i> Cerrar</button>
                    <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    }
</div><!-- /.modal -->


